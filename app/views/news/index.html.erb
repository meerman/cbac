<h1>Listing news</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%=h news.title %></td>
    <td><%=h news.body %></td>
    <td><%= link_to 'Show', news %></td>
    <td><%= link_to 'Edit', edit_news_path(news) %></td>
    <td><%= link_to 'Destroy', news, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New news', new_news_path %>